<% obj.each do |ingredient| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 well center">
      <h4><%= link_to ingredient.name, ingredient_path(ingredient) %></h4>
      <p><%= "Used in #{pluralize(ingredient.recipes.count, 'recipe')}" if ingredient.recipes.any? %></p>
      <div class="ingredient-actions center">
        <% if logged_in? && current_chef.admin? %>
          <%= link_to "Edit this ingredient", edit_ingredient_path(ingredient), class: "btn btn-xs btn-warning" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>